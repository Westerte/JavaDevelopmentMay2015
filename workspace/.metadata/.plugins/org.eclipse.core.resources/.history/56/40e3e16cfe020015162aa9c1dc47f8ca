<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
   
    <xs:element name="airline" type="airline_type"/>
    
    <xs:complexType name="airline_type">
        <xs:sequence>
            <xs:element minOccurs="0" maxOccurs="unbounded" name="airbus" type="airbus_type"/>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="freighter" type="freighter_type"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="airplane_type">        
        <xs:sequence >
	        <xs:choice>
	            <xs:element  name="model">
	            </xs:element>            
	            <xs:element  name="model" type="airbus_manufacturer_type"/>
	         </xs:choice>
            
            <xs:element name="model">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="BOEING"/>
						<xs:enumeration value="AIRBUS"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            
            
            <xs:element name="max_range">
                <xs:simpleType>
                    <xs:restriction base="xs:integer">
                        <xs:minInclusive value="1"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            
            <xs:element name="capacity">
                <xs:simpleType>
                    <xs:restriction base="xs:integer">
                        <xs:minInclusive value="1"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            
            <xs:element name="bearing_capacity">
                <xs:simpleType>
                    <xs:restriction base="xs:integer">
                        <xs:minInclusive value="1"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
			
			<xs:element name="fuel_consumption">
                <xs:simpleType>
                    <xs:restriction base="xs:integer">
                        <xs:minInclusive value="1"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>            
        </xs:sequence>
    </xs:complexType>   
	
	<xs:complexType name="airbus_type">
		<xs:complexContent>
            <xs:extension base="airplane_type">
                <xs:sequence>                    
					<xs:element name="seats_count">
						<xs:simpleType>
							<xs:restriction base="xs:integer">
								<xs:minInclusive value="1"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:element>
					
					<xs:element name="class_count">
						<xs:simpleType>
							<xs:restriction base="xs:integer">
								<xs:minInclusive value="1"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:element>
					
					<xs:element name="luggage_capacity">
						<xs:simpleType>
							<xs:restriction base="xs:integer">
								<xs:minInclusive value="1"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:element>				
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType> 
	
	<xs:complexType name="freighter_type">
		<xs:complexContent>
            <xs:extension base="airplane_type">
                <xs:sequence>                    
					<xs:element name="cargo_hold_count">
						<xs:simpleType>
							<xs:restriction base="xs:integer">
								<xs:minInclusive value="1"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:element>		
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>   	
</xs:schema>

