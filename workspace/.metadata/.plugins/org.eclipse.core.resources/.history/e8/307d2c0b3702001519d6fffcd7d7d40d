package edu.nesterenko.airline.entity;

public enum Model {
	_747(Manufacturer.BOEING, "747"), 
	_777(Manufacturer.BOEING, "777"),
	
	A320(Manufacturer.AIRBUS, "a320"),
	A380(Manufacturer.AIRBUS, "a380");
	
	
	private Manufacturer manufacturer;
	private String value;
	
	Model(Manufacturer manufacturer, String value) {
		this.manufacturer = manufacturer;
		this.value = value;
	}
	
	enum Manufacturer {
		BOEING("Boeing"),
		AIRBUS("Airbus");
		
		private String value;
		
		Manufacturer(String value) {
			this.value = value;
		}
	}
}
