package edu.vadimnesterenko.airline.command;

import edu.vadimnesterenko.airline.exception.LogicalException;

public class CommandFactory {
	public Command getCommand(CommandEnum command) throws LogicalException {
		switch (command) {
		case ADD_AIRBUS:
			return AddAirbusCommand.getInstance();
		case ADD_FREIGHTER:
			return AddFreighterCommand.getInstance();
		case DELETE:
			return DeleteCommand.getInstance();
		case FIND_ALL:
			 return FindAllCommand.getInstance();
		case FIND_BY_FUEL_CONSUMPTION:
			return FindByFuelCondumptionCommand.getInstance();
		default:
			throw new LogicalException("Enum doesn't contain this value.");
		}		
	}
}
