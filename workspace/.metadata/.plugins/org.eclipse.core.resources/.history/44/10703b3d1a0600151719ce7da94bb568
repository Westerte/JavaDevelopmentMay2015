package edu.nesterenko.parcer.entity;

import java.util.ArrayList;
import java.util.List;
import edu.nesterenko.parcer.exception.PhisicalException;

public class Composite implements Component {
	public final int DEPTH_LEVEL;
	private List<Component> components = new ArrayList<Component>();
	
	public Composite(int depthLevel) {
		DEPTH_LEVEL = depthLevel;
	}	

	@Override
	public void addComponent(Component c) throws PhisicalException {
		if(null != c) {
			components.add(c);
		} else {
			throw new PhisicalException();
		}
	}

	@Override
	public void removeComponet(Component c) throws PhisicalException {
		if(null != c) {
			components.remove(c);
		} else {
			throw new PhisicalException();
		}
	}

	@Override
	public Component getChild(int index) {
		
		return null;
	}
}
