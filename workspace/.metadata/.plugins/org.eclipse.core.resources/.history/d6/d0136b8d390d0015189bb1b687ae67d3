<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
   
    <xs:element name="airline" type="airline-type"/>
    
    <xs:complexType name="airline-type">
        <xs:sequence>
            <xs:element minOccurs="0" maxOccurs="unbounded" name="airliner" type="airliner-type"/>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="freighter" type="freighter-type"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="airplane-type" abstract="true">      	
        <xs:sequence >
	        <xs:choice>
	            <xs:element name="boeing">
	            	<xs:simpleType>
	            		<xs:restriction base="xs:string">
	            			<xs:enumeration value="747"/>
	            			<xs:enumeration value="777"/>
	            		</xs:restriction>
	            	</xs:simpleType>
	            </xs:element>            
	            <xs:element  name="airbus">
	            	<xs:simpleType>
	            		<xs:restriction base="xs:string">
	            			<xs:enumeration value="a320"/>
	            			<xs:enumeration value="a380"/>
	            		</xs:restriction>
	            	</xs:simpleType>
	            </xs:element>
	         </xs:choice>
            <xs:element name="max-range" type="xs:positiveInteger"/>            
            <xs:element name="capacity" type="xs:positiveInteger"/>            
            <xs:element name="bearing-capacity" type="xs:positiveInteger"/>		
			<xs:element name="fuel-consumption" type="xs:positiveInteger"/>           
        </xs:sequence>
        <xs:attribute name = "number-plate" use="required">
        	<xs:simpleType>
        		<xs:restriction base="xs:ID">
        			<xs:pattern value="EW-[\d]{3}(PA)|(PO)|(PJ)"/>
        		</xs:restriction>
        	</xs:simpleType>
        </xs:attribute>     
    </xs:complexType>   
	
	<xs:complexType name="airliner-type" substitutionGroup="airplane">
		<xs:complexContent>
            <xs:extension base="airplane-type">
                <xs:sequence>                    
					<xs:element name="seats-count" type="xs:positiveInteger"/>					
					<xs:element name="class-count" type="xs:positiveInteger"/>					
					<xs:element name="luggage-capacity" type="xs:positiveInteger"/>				
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType> 
	
	<xs:complexType name="freighter-type" substitutionGroup="airplane">
		<xs:complexContent>
            <xs:extension base="airplane-type">
                <xs:sequence>                    
					<xs:element name="cargo-hold-count" type="xs:positiveInteger"/>		
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>   	
</xs:schema>

