package edu.vadimnesterenko.airline.logic;

import java.util.Collections;
import java.util.List;

import edu.vadimnesterenko.airline.entity.Airline;
import edu.vadimnesterenko.airline.entity.Airplane;

public class AirlineAirplainsSorter {
	private AirlineAirplainsSorter() {}
	
	public static void sortAirplanesByMaxRange() {
		List<Airplane> airplanes = Airline.getInstance().getAirplanes();
		Collections.sort(airplanes, new MaxRangeComparator());
	}
}
