package edu.vadimnesterenko.airline.entity;

import java.util.ArrayList;
import java.util.List;

import edu.vadimnesterenko.airline.exception.LogicalException;
import edu.vadimnesterenko.airline.exception.PhisicalException;

public class Airline {
	static final Airline instance;
	
	static {
		instance = new Airline();
	}
	
	private Airline() {}
	
	public static Airline getInstance() {
		return instance; 
	}
	
	private List<Airplane> airplanes = new ArrayList<Airplane>();
	
	public Airplane getAirplanes(int index) throws LogicalException {
		try {
			return airplanes.get(index);		
		} catch (IndexOutOfBoundsException ex) {
			throw new LogicalException(ex);
		}
	}
	
	public void setAirplanes(Airplane airplane) throws PhisicalException {
		if(null != airplane) {
			this.airplanes.add(airplane);
		} else {
			throw new PhisicalException("airplane must be not null");
		}
	}

	public List<Airplane> getAirplanes() {
		return airplanes;
	}

	public void setAirplanes(List<Airplane> airplanes) {
		this.airplanes = airplanes;
	}

	public Airplane removeAirplane(int index) {
		return airplanes.remove(index);
	}
	
}
